<div class="mt-4">
  <form
    name="create-form-profile"
    method="POST"
    enctype="multipart/form-data"
    action=""
  >
    <div class="container-form"><a
        href="/"
        style="text-decoration: none;"
      >Home</a></div>

    <div class="form-group d-flex align-items-center repair-form-signup">
      <label for="title" class="repair-label"></label>
      <input
        type="hidden"
        name="title"
        class="form-control"
        id="title"
        value="Teacher"
      />
    </div>

    <div class="form-group d-flex align-items-center repair-form-signup">
      <label
        class="form-label"
        for="customFile"
        style="min-width: 100px;"
      >Avatar</label>
      <input type="file" class="form-control" id="customFile" name="myAvatar" />
    </div>

    <div class="form-group d-flex align-items-center repair-form-signup">
      <label for="Firsname" class="repair-label">Firstname</label>
      <input
        type="text"
        name="firstname"
        class="form-control"
        id="firstname"
        value=""
      />
    </div>

    <div class="form-group d-flex align-items-center repair-form-signup">
      <label for="lastname" class="repair-label">Lastname</label>
      <input
        type="text"
        name="lastname"
        class="form-control"
        id="lastname"
        value=""
      />
    </div>

    <div class="form-group d-flex align-items-center repair-form-signup">
      <label for="gender" class="repair-label">Gender</label>
      <select name="gender" class="form-control" id="gender">
        <option value="gender"></option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>

    <div class="form-group d-flex align-items-center repair-form-signup">
      <label for="email" class="repair-label">Email</label>
      <input type="text" name="email" class="form-control" id="email" />
    </div>

    <div class="form-group d-flex align-items-center repair-form-signup">
      <label for="password" class="repair-label">Password</label>
      <input
        type="password"
        name="password"
        class="form-control"
        id="password"
      />
    </div>

    <button
      type="submit"
      class="btn btn-primary"
      id="btn-create-profile"
    >Submit</button>
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function(){ var
  createFormProfile = document.forms['create-form-profile']; var firstname; var
  lastname; var btnCreatProfile = document.getElementById('btn-create-profile');
  $("#firstname").on("input", function() { firstname = $(this).val(); });
  $("#lastname").on("input", function() { lastname = $(this).val(); });
  btnCreatProfile.onclick = function(){ createFormProfile.action =
  "/user/signin_after_signup"; createFormProfile.submit(); } });
</script>