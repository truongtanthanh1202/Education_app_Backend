<div class='mt-4'>
    <div><button
            type='button'
            class='btn btn-outline-secondary'
            style='margin-left: 20px;
            margin-bottom: 20px'
        ><a
                href='/me/student/{{student.id}}/MyHome'
                style='text-decoration: none;
                color:yellowgreen'
            >Home</a></button></div>

    <div><button
            type='button'
            class='btn btn-outline-secondary'
            style='margin-left: 20px;'
        ><a
                href='/student/{{student.id}}/registerCourse/render'
                style='text-decoration: none;
                color:yellowgreen'
            >Register Course</a></button></div>
    <div class='row'>
        {{#each course}}
            <div class='col-sm-6 col-lg-3'>
                <div class='card' style='margin: 16px'>
                    <a
                        href='/student/{{this.id_student}}/{{this._id}}/MyAllLesson'
                    >
                        <img
                            {{!-- src='data:{{this.thumbnail.contentType}};base64,{{this.thumbnail.data}}' --}}
                            src='{{this.thumbnail}}'
                            class='card-img-top'
                            alt='khoa hoc'
                            style='width:  15vw;
                    height: 100px;
                    background-size: cover;'
                        />
                    </a>
                    <div class='card-body'>
                        <a
                            href='/student/{{this.id_student}}/{{this._id}}/MyAllLesson'
                        >
                            <h5 class='card-title'>{{this.description}}</h5>
                        </a>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='/' class='btn btn-primary'>Review</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>